{
   "compilerOptions": {
    // Mude esta linha:
    "module": "commonjs", // era "nodenext"
    
    // Comente/remova estas linhas problemáticas:
    // "exactOptionalPropertyTypes": true,
    // "noUncheckedIndexedAccess": true,
    
    // Adicione esta se não tiver:
    "moduleResolution": "node",
    
    // Resto mantém igual
    "target": "es2016",
    "types": ["express"],
    "typeRoots": ["./src/@types"],
    
    // Output Settings
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // Type Checking - Configurações menos restritivas para Prisma
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    
    // Configurações problemáticas para Prisma - removidas/ajustadas
    // "exactOptionalPropertyTypes": false, // Pode causar problemas com Prisma
    // "noUncheckedIndexedAccess": false,   // Pode ser muito restritivo
    
    // Prisma-friendly options
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "src/@types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}